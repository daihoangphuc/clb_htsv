@model IEnumerable<CLB_HTSV.Models.ThanhVien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaSinhVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayGiaNhap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChucVu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LopHoc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaSinhVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayGiaNhap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChucVu.TenChucVu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LopHoc.MaLop)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaThanhVien">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaThanhVien">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaThanhVien">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
